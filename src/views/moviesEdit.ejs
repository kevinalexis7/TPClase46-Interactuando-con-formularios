<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title class="titulo">Editar Película</title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <figure>
        <img src="/img/logo-DH.png" alt="Logo Digital House">
      </figure>
    <h1 class="titulo">Película Editada:  <%= Movie.title %></h1>
    <section class="formulario">
        
            <form action="/movies/update/<%= Movie.id %>?_method=PUT" method="POST">
                <label for="title">Título </label>
                <div>
                    <input type="text" name="title" id="title" value="<%= Movie.title %>">
                        <p id="info-title" style="color: green"></p>
                        <p id="error-title" style="color: red"></p>
                </div>
                <label for="rating">Calificación </label>
                <div>
                    <input type="number" name="rating" id="rating" value="<%= Movie.rating %>">
                    <p id="info-rating" style="color: green"></p>
                    <p id="error-rating" style="color: red"></p>
                </div>
                <label for="awards">Premios </label>
                <div>
                    <input type="number" name="awards" id="awards" value="<%= Movie.awards %>">
                    <p id="info-awards" style="color: green"></p>
                    <p id="error-awards" style="color: red"></p>
                </div>
                <label for="release_date">Fecha de creación </label>
                <div>
                    <input type="date" name="release_date" id="release_date" value="<%= Movie.release_date %>">
                    <p id="info-release_date" style="color: green"></p>
                    <p id="error-release_date" style="color: red"></p>
                </div>
                <label for="length">Duración </label>
                <div>
                    <input type="number" name="length" id="length" value="<%= Movie.length %>">
                    <p id="info-length" style="color: green"></p>
                    <p id="error-length" style="color: red"></p>
                </div>
                <label for="genre_id">Género </label>
                <div>

                    <select name="genre_id" id="genre_id">
                        <% allGenres.forEach(genre => { %>
                        <option value="<%= genre.id %>" <% if (Movie.genre.id == genre.id) { %><%= 'selected' %><% }; %>><%= genre.name %></option>
                        <% }); %>
                    </select>
                </div>

        <!--
                <label for="genre_id">Genre ID </label>
                <p><input type="number" name="genre_id" id="" value="<%= Movie.genre_id %>"></p>
            -->
                
                <br>
                <p> <button class="botonAgregar" type="submit">Actualizar</button>
            
                <a  class="botonVolver" href="/movies">Listado de Películas</a></p>
            </form>
        
    </section>
    <script src="/js/moviesEditValidation.js"></script>
</body>

</html>